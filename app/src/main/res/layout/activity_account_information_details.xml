<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/account_information_details"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center|start"
        android:textSize="@dimen/title_text_size"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:layout_margin="20dp"
            android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/sub_header_size"
                    android:layout_gravity="center|start"
                    android:layout_marginBottom="10dp"
                    android:text="@string/customer"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/light_black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sub_text_size"
                    android:textColor="@color/light_black"
                    android:layout_gravity="center|start"
                    android:layout_marginBottom="5dp"
                    android:text="@string/customer"/>

                <EditText
                    android:id="@+id/user_name_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/customer_name"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_light"
                    android:textSize="@dimen/privacy_policy_statement" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sub_header_size"
                    android:layout_gravity="center|start"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/contact"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/light_black"/>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_weight="50"
                           android:textSize="@dimen/sub_text_size"
                           android:text="@string/first_name"
                           android:layout_gravity="center|start"
                           android:textColor="@color/light_black"

                           />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:textSize="@dimen/sub_text_size"
                            android:text="@string/last_name"
                            android:layout_gravity="center|start"
                            android:textColor="@color/light_black"

                            />

                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/first_name_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_weight="50"
                            android:hint="@string/enter_first_name"
                            android:textColor="@color/black"

                            android:textSize="@dimen/sub_text_size" />

                        <EditText
                            android:id="@+id/last_name_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_weight="50"
                            android:hint="@string/enter_last_name"
                            android:textColor="@color/black"

                            android:textSize="@dimen/sub_text_size" />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:textSize="@dimen/sub_text_size"
                            android:text="@string/phone"
                            android:layout_gravity="center|start"
                            android:textColor="@color/light_black"

                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:textSize="@dimen/sub_text_size"
                            android:text="@string/mobile_number"
                            android:layout_gravity="center|start"
                            android:textColor="@color/light_black"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:textSize="@dimen/sub_text_size"
                            android:text="@string/fax"
                            android:layout_gravity="center|start"
                            android:textColor="@color/light_black"

                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/phone_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_weight="50"
                            android:hint="@string/enter_telephone_number"
                            android:textColor="@color/black"

                            android:textSize="@dimen/sub_text_size" />

                        <EditText
                            android:id="@+id/mobile_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_weight="50"
                            android:hint="@string/enter_mobile_number"
                            android:textColor="@color/black"

                            android:textSize="@dimen/sub_text_size" />

                        <EditText
                            android:id="@+id/fax_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_weight="50"
                            android:hint="@string/enter_fax_number"
                            android:textColor="@color/black"

                            android:textSize="@dimen/sub_text_size" />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sub_text_size"
                        android:text="@string/email"
                        android:layout_gravity="center|start"
                        android:textColor="@color/light_black"

                        />
                    </TableRow>

                    <EditText
                        android:id="@+id/email_address_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:hint="@string/enter_email_address"
                        android:textColor="@color/black"

                        android:textSize="@dimen/sub_text_size" />
                </TableLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/sub_header_size"
                    android:layout_gravity="center|start"
                    android:layout_marginBottom="10dp"
                    android:text="@string/address_label"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/light_black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sub_text_size"
                    android:textColor="@color/light_black"
                    android:layout_gravity="center|start"
                    android:layout_marginBottom="5dp"
                    android:text="@string/address_label"/>

                <EditText
                    android:id="@+id/enter_address_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_address"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_light"
                    android:textSize="@dimen/privacy_policy_statement" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sub_header_size"
                    android:layout_gravity="center|start"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/billing_address"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/light_black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginBottom="10dp"
                    android:text="@string/billing_address"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/sub_text_size" />

                <EditText
                    android:id="@+id/billing_address_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginBottom="20dp"
                    android:hint="@string/enter_billing_address"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sub_text_size" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sub_header_size"
                    android:layout_gravity="center|start"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/email_sender"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/light_black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/email_sender"
                    android:textSize="@dimen/sub_text_size"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/light_black"
                    android:layout_gravity="center|start"/>

                <EditText
                    android:id="@+id/email_sender_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginBottom="20dp"
                    android:hint="@string/enter_a_valid_email_address"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sub_text_size" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sub_header_size"
                    android:layout_gravity="center|start"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/vat_number"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/light_black"/>

                <EditText
                    android:id="@+id/vat_number_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/vat_number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sub_text_size" />
            </LinearLayout>

        </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/save_button_user_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="575dp"
                android:background="@drawable/button_background_signup"
                android:gravity="center"
                android:textColor="@color/white"
                android:padding="10dp"
                android:text="@string/save"
                android:textSize="@dimen/privacy_policy_statement" />

        </LinearLayout>
    </LinearLayout>

    </ScrollView>
</LinearLayout>
</layout>