<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:text="@string/account_information_details"
                    android:textColor="@color/button"
                    android:textSize="@dimen/title_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|start"
                                android:layout_marginBottom="5dp"
                                android:text="@string/customer"
                                android:textColor="@color/button"
                                android:textSize="@dimen/sub_header_size" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.2dp"
                                android:layout_marginBottom="10dp"
                                android:background="@color/button" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|start"
                                android:layout_marginBottom="5dp"
                                android:text="@string/customer"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/sub_text_size"
                                android:visibility="gone" />

                            <EditText
                                android:id="@+id/user_name_edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@drawable/button_red"
                                android:hint="@string/customer_name"
                                android:paddingLeft="10dp"
                                android:textColor="@color/light_black"
                                android:textColorHint="@color/text_light"
                                android:textSize="@dimen/privacy_policy_statement" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|start"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="10dp"
                                android:text="@string/contact"
                                android:textColor="@color/button"
                                android:textSize="@dimen/sub_header_size" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginBottom="10dp"
                                android:background="@color/button" />

                            <TableLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center|start"
                                        android:layout_weight="50"
                                        android:text="@string/first_name"
                                        android:textColor="@color/light_black"
                                        android:textSize="@dimen/sub_text_size"
                                        android:visibility="gone" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center|start"
                                        android:layout_weight="50"
                                        android:text="@string/last_name"
                                        android:textColor="@color/light_black"
                                        android:textSize="@dimen/sub_text_size"
                                        android:visibility="gone" />

                                </TableRow>

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <EditText
                                        android:id="@+id/first_name_edit_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="60dp"
                                        android:layout_gravity="center|start"
                                        android:layout_weight="1"
                                        android:background="@drawable/button_bg"
                                        android:hint="@string/enter_first_name"
                                        android:paddingLeft="10dp"
                                        android:textColor="@color/light_black"
                                        android:textColorHint="@color/text_light"
                                        android:textSize="@dimen/privacy_policy_statement" />

                                    <EditText
                                        android:id="@+id/last_name_edit_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="60dp"
                                        android:layout_gravity="center|start"
                                        android:layout_weight="1"
                                        android:background="@drawable/button_bg"
                                        android:hint="@string/enter_last_name"
                                        android:paddingLeft="10dp"
                                        android:textColor="@color/light_black"
                                        android:textColorHint="@color/text_light"
                                        android:textSize="@dimen/privacy_policy_statement" />
                                </TableRow>

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center|start"
                                        android:layout_weight="50"
                                        android:text="@string/phone"
                                        android:textColor="@color/light_black"
                                        android:textSize="@dimen/sub_text_size" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center|start"
                                        android:layout_weight="50"
                                        android:text="@string/mobile_number"
                                        android:textColor="@color/light_black"
                                        android:textSize="@dimen/sub_text_size" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center|start"
                                        android:layout_weight="50"
                                        android:text="@string/fax"
                                        android:textColor="@color/light_black"
                                        android:textSize="@dimen/sub_text_size" />
                                </TableRow>

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp">

                                    <EditText
                                        android:id="@+id/phone_edit_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="60dp"
                                        android:layout_gravity="center|start"
                                        android:layout_weight="1"
                                        android:background="@drawable/button_bg"
                                        android:hint="@string/enter_telephone_number"
                                        android:paddingLeft="10dp"
                                        android:textColor="@color/light_black"
                                        android:textColorHint="@color/text_light"
                                        android:textSize="@dimen/privacy_policy_statement" />

                                    <EditText
                                        android:id="@+id/mobile_edit_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="60dp"
                                        android:layout_gravity="center|start"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/button_bg"
                                        android:hint="@string/enter_mobile_number"
                                        android:paddingLeft="10dp"
                                        android:textColor="@color/light_black"
                                        android:textColorHint="@color/text_light"
                                        android:textSize="@dimen/privacy_policy_statement" />

                                    <EditText
                                        android:id="@+id/fax_edit_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="60dp"
                                        android:layout_gravity="center|start"
                                        android:layout_weight="1"
                                        android:background="@drawable/button_bg"
                                        android:hint="@string/enter_fax_number"
                                        android:paddingLeft="10dp"
                                        android:textColor="@color/light_black"
                                        android:textColorHint="@color/text_light"
                                        android:textSize="@dimen/privacy_policy_statement" />
                                </TableRow>

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center|start"
                                        android:text="@string/email"
                                        android:textColor="@color/light_black"
                                        android:textSize="@dimen/sub_text_size"

                                        />
                                </TableRow>

                                <EditText
                                    android:id="@+id/email_address_edit_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center|start"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/button_bg"
                                    android:hint="@string/enter_email_address"
                                    android:paddingLeft="10dp"
                                    android:textColor="@color/light_black"
                                    android:textColorHint="@color/text_light"
                                    android:textSize="@dimen/privacy_policy_statement" />
                            </TableLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|start"
                                android:layout_marginBottom="5dp"
                                android:text="@string/address_label"
                                android:textColor="@color/button"
                                android:textSize="@dimen/sub_header_size" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.2dp"
                                android:layout_marginBottom="10dp"
                                android:background="@color/button" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|start"
                                android:layout_marginBottom="5dp"
                                android:text="@string/address_label"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/sub_text_size"
                                android:visibility="gone" />

                            <EditText
                                android:id="@+id/enter_address_edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@drawable/button_bg"
                                android:hint="@string/enter_address"
                                android:paddingLeft="10dp"
                                android:textColor="@color/light_black"
                                android:textColorHint="@color/text_light"
                                android:textSize="@dimen/privacy_policy_statement" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|start"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="10dp"
                                android:text="@string/billing_address"
                                android:textColor="@color/button"
                                android:textSize="@dimen/sub_header_size" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.2dp"
                                android:layout_marginBottom="10dp"
                                android:background="@color/button" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|start"
                                android:layout_marginBottom="10dp"
                                android:text="@string/billing_address"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/sub_text_size"
                                android:visibility="gone" />

                            <EditText
                                android:id="@+id/billing_address_edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_gravity="center|start"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/button_bg"
                                android:hint="@string/enter_billing_address"
                                android:paddingLeft="10dp"
                                android:textColor="@color/light_black"
                                android:textColorHint="@color/text_light"
                                android:textSize="@dimen/privacy_policy_statement" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|start"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="10dp"
                                android:text="@string/email_sender"
                                android:textColor="@color/button"
                                android:textSize="@dimen/sub_header_size" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.2dp"
                                android:layout_marginBottom="10dp"
                                android:background="@color/button" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|start"
                                android:layout_marginBottom="10dp"
                                android:text="@string/email_sender"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/sub_text_size"
                                android:visibility="gone" />

                            <EditText
                                android:id="@+id/email_sender_edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_gravity="center|start"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/button_bg"
                                android:hint="@string/enter_a_valid_email_address"
                                android:paddingLeft="10dp"
                                android:textColor="@color/light_black"
                                android:textColorHint="@color/text_light"
                                android:textSize="@dimen/sub_text_size" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|start"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="10dp"
                                android:text="@string/vat_number"
                                android:textColor="@color/button"
                                android:textSize="@dimen/sub_header_size" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.2dp"
                                android:layout_marginBottom="10dp"
                                android:background="@color/button" />

                            <EditText
                                android:id="@+id/vat_number_edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_gravity="center|start"
                                android:background="@drawable/button_bg"
                                android:hint="@string/vat_number"
                                android:paddingLeft="10dp"
                                android:textColor="@color/light_black"
                                android:textColorHint="@color/text_light"
                                android:textSize="@dimen/privacy_policy_statement" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/save_button_user_update"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/blue"
                    android:padding="10dp"
                    android:text="@string/save"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title_text_size" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>