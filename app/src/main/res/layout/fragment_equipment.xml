<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/add_equipment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/button_bg"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Equipment"
            android:textColor="@color/text_light"
            android:textSize="@dimen/privacy_policy_statement"
            android:padding="10dp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/button"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/light_black"/>

        <TextView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:text="Equipment"
            android:textColor="@color/white"
            android:textSize="@dimen/sub_header_size"
            android:gravity="center"
            android:layout_gravity="center"/>

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <TextView
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Customer"
            android:textColor="@color/white"
            android:textSize="@dimen/sub_header_size"
            android:gravity="center"
            android:layout_gravity="center"/>

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <TextView
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Site"
            android:textColor="@color/white"
            android:textSize="@dimen/sub_header_size"
            android:gravity="center"
            android:layout_gravity="center"/>

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <TextView
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:text="Tags"
            android:textColor="@color/white"
            android:textSize="@dimen/sub_header_size"
            android:gravity="center"
            android:layout_gravity="center"/>

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/equipment_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:id="@+id/no_equipment_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Jobs Found"
            android:textSize="@dimen/site_address_text_size"
            android:textColor="@color/button"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>