<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/schedule_job_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Job Number"
                    android:textColor="@color/button"
                    android:textSize="24sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/button" />

                <TextView
                    android:id="@+id/schedule_job_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Job Type"
                    android:textColor="@color/light_black"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/schedule_start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_red"
                        android:gravity="center|start"
                        android:hint="Start Date"
                        android:paddingLeft="10dp"
                        android:textColor="@color/text_light"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/schedule_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_red"
                        android:gravity="center|start"
                        android:hint="Start Time"
                        android:paddingLeft="10dp"
                        android:textColor="@color/text_light"
                        android:textSize="24sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/schedule_end_date"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_red"
                        android:gravity="center|start"
                        android:hint="End Date"
                        android:paddingLeft="10dp"
                        android:textColor="@color/text_light"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/schedule_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_red"
                        android:gravity="center|start"
                        android:hint="End Time"
                        android:paddingLeft="10dp"
                        android:textColor="@color/text_light"
                        android:textSize="24sp" />

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginTop="10dp"
                    android:text="@string/technician"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/sub_header_size" />

                <Spinner
                    android:id="@+id/technician_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    style="@style/SpinnerThemeRed"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/accept_job"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/blue"
            android:text="@string/accept"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />

    </LinearLayout>

</LinearLayout>