<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/add_activities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/button_bg"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/add"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Activity"
            android:textColor="@color/text_light"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/button"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/light_black"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Technician"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_gravity="center"/>

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Activity"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_gravity="center"/>

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <TextView
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:text="From"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_gravity="center"/>

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <TextView
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:text="To"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_gravity="center"/>

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <TextView
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:text="Note"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_gravity="center"/>

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/no_activity_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Activities Found"
            android:textSize="28sp"
            android:textColor="@color/button"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>