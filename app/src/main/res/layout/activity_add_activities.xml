<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="15dp">

        <Spinner
            android:id="@+id/users_activity_spinner"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_red"/>

        <Spinner
            android:id="@+id/activity_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_red"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/activity_start_date"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:hint="Start Date"
            android:textSize="24sp"
            android:gravity="center|start"
            android:textColor="@color/text_light"
            android:background="@drawable/button_red"
            android:layout_weight="1"
            android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/activity_start_time"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:hint="Start Time"
                android:textSize="24sp"
                android:gravity="center|start"
                android:textColor="@color/text_light"
                android:background="@drawable/button_bg"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:paddingLeft="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/activity_end_date"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:hint="End Date"
                android:textSize="24sp"
                android:gravity="center|start"
                android:textColor="@color/text_light"
                android:background="@drawable/button_red"
                android:layout_weight="1"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/activity_end_time"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:hint="End Time"
                android:textSize="24sp"
                android:gravity="center|start"
                android:textColor="@color/text_light"
                android:background="@drawable/button_bg"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:paddingLeft="10dp"/>

        </LinearLayout>

        <EditText
            android:id="@+id/activity_note_edit"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:hint="Note"
            android:layout_marginTop="20sp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="start"
            android:background="@drawable/button_bg"/>

        <Button
            android:id="@+id/save_activity"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:textColor="@color/white"
            android:text="Save"
            android:textSize="26sp"
            android:background="@color/button"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</LinearLayout>