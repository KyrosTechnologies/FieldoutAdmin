<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Customer"
                        android:textColor="@color/button"
                        android:textSize="24sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/button" />

                    <AutoCompleteTextView
                        android:id="@+id/customer_auto_complete"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_red"
                        android:hint="Customer"
                        android:paddingLeft="8dp"
                        android:textColor="@color/light_black"
                        android:textColorHint="@color/text_light"
                        android:textSize="@dimen/privacy_policy_statement" />

                    <AutoCompleteTextView
                        android:id="@+id/site_auto_complete"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_red"
                        android:hint="Site"
                        android:paddingLeft="8dp"
                        android:textColor="@color/light_black"
                        android:textColorHint="@color/text_light"
                        android:textSize="@dimen/privacy_policy_statement" />

                    <AutoCompleteTextView
                        android:id="@+id/equipment_auto_complete"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_red"
                        android:hint="Equipment"
                        android:paddingLeft="8dp"
                        android:textColor="@color/light_black"
                        android:textColorHint="@color/text_light"
                        android:textSize="@dimen/privacy_policy_statement" />

                    <AutoCompleteTextView
                        android:id="@+id/address_auto_complete"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_red"
                        android:hint="Address"
                        android:paddingLeft="8dp"
                        android:singleLine="true"
                        android:textColor="@color/light_black"
                        android:textColorHint="@color/text_light"
                        android:textSize="@dimen/privacy_policy_statement" />

                    <EditText
                        android:id="@+id/additional_address_auto_complete"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_bg"
                        android:hint="Additional Address"
                        android:paddingLeft="8dp"
                        android:singleLine="true"
                        android:textColor="@color/light_black"
                        android:textColorHint="@color/text_light"
                        android:textSize="@dimen/privacy_policy_statement" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Contact"
                        android:textColor="@color/button" />

                    <EditText
                        android:id="@+id/jobs_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_bg"
                        android:hint="First Name"
                        android:paddingLeft="8dp"
                        android:textColor="@color/light_black"
                        android:textColorHint="@color/text_light"
                        android:textSize="@dimen/privacy_policy_statement" />

                    <EditText
                        android:id="@+id/jobs_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_bg"
                        android:hint="Last Name"
                        android:paddingLeft="8dp"
                        android:textColor="@color/light_black"
                        android:textColorHint="@color/text_light"
                        android:textSize="@dimen/privacy_policy_statement" />

                    <EditText
                        android:id="@+id/phone_jobs_edit"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_bg"
                        android:hint="Phone"
                        android:paddingLeft="8dp"
                        android:textColor="@color/light_black"
                        android:textColorHint="@color/text_light"
                        android:textSize="@dimen/privacy_policy_statement" />

                    <EditText
                        android:id="@+id/mobile_jobs_edit"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_bg"
                        android:hint="Mobile"
                        android:paddingLeft="8dp"
                        android:textColor="@color/light_black"
                        android:textColorHint="@color/text_light"
                        android:textSize="@dimen/privacy_policy_statement" />

                    <EditText
                        android:id="@+id/email_jobs_edit"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_bg"
                        android:hint="Email"
                        android:paddingLeft="8dp"
                        android:textColor="@color/light_black"
                        android:textColorHint="@color/text_light"
                        android:textSize="@dimen/privacy_policy_statement" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="0.7"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Job Information"
                        android:textColor="@color/button"
                        android:textSize="24sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/button" />

                    <EditText
                        android:id="@+id/job_number_edit"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_red"
                        android:hint="Custom Job #"
                        android:paddingLeft="8dp"
                        android:textColor="@color/light_black"
                        android:textColorHint="@color/text_light"
                        android:textSize="@dimen/privacy_policy_statement" />

                    <EditText
                        android:id="@+id/description_edit"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_red"
                        android:gravity="start"
                        android:hint="Description"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:textColor="@color/light_black"
                        android:textColorHint="@color/text_light"
                        android:textSize="@dimen/privacy_policy_statement" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:layout_marginTop="10dp"
                        android:text="@string/job_types"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/sub_header_size" />

                    <Spinner
                        android:id="@+id/job_type_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        style="@style/SpinnerThemeRed"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_bg"
                        android:gravity="center|start"
                        android:paddingLeft="8dp"
                        android:text="Standard Job Report Template"
                        android:textColor="@color/text_light"
                        android:textSize="@dimen/privacy_policy_statement" />

                    <LinearLayout
                        android:id="@+id/priority_linear"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_red"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/priority_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:ellipsize="marquee"
                            android:gravity="start|center"
                            android:paddingLeft="8dp"
                            android:singleLine="true"
                            android:text="Priority"
                            android:textColor="@color/text_light"
                            android:textSize="@dimen/privacy_policy_statement" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/down_black" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Scheduling Preferences"
                        android:textColor="@color/button"
                        android:textSize="24sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/button" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:layout_marginTop="10dp"
                        android:text="@string/scheduling"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/sub_header_size" />

                    <Spinner
                        android:id="@+id/window_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        style="@style/SpinnerTheme"/>

                    <TextView
                        android:id="@+id/scheduling_date"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_bg"
                        android:gravity="center|start"
                        android:hint="Start Date"
                        android:paddingLeft="10dp"
                        android:textColor="@color/text_light"
                        android:textSize="@dimen/privacy_policy_statement" />

                    <TextView
                        android:id="@+id/scheduling_time"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_bg"
                        android:gravity="center|start"
                        android:hint="Start Time"
                        android:paddingLeft="10dp"
                        android:textColor="@color/text_light"
                        android:textSize="@dimen/privacy_policy_statement"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:layout_marginTop="10dp"
                        android:text="@string/teams"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/sub_header_size" />

                    <Spinner
                        android:id="@+id/team_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        style="@style/SpinnerTheme"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:layout_marginTop="10dp"
                        android:text="@string/technician"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/sub_header_size" />

                    <Spinner
                        android:id="@+id/user_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        style="@style/SpinnerTheme"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Additional Information"
                        android:textColor="@color/button"
                        android:textSize="24sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/button" />

                    <TextView
                        android:id="@+id/tags_add_jobs_text"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_bg"
                        android:gravity="center|start"
                        android:paddingLeft="8dp"
                        android:text="Tags"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/privacy_policy_statement" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/tags_selected_jobs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/save_button"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@color/blue"
                    android:text="@string/save"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title_text_size" />

                <Button
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="0.5"
                    android:background="@color/blue"
                    android:text="Save and Open"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/save_schedule"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:background="@color/green"
                    android:text="Save and Schedule"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title_text_size" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>