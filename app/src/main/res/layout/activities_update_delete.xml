<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginBottom="10dp"
            android:text="@string/technician"
            android:textColor="@color/light_black"
            android:textSize="@dimen/sub_header_size" />

        <Spinner
            android:id="@+id/users_activity_spinner_update"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/button_red" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/activity_types"
            android:textColor="@color/light_black"
            android:textSize="@dimen/sub_header_size" />

        <Spinner
            android:id="@+id/activity_type_spinner_update"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/button_red" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_start_date_update"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_red"
                android:gravity="center|start"
                android:paddingLeft="10dp"
                android:text="Start Date"
                android:textColor="@color/text_light"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/activity_start_time_update"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:gravity="center|start"
                android:paddingLeft="10dp"
                android:text="Start Time"
                android:textColor="@color/text_light"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_end_date_update"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_red"
                android:gravity="center|start"
                android:paddingLeft="10dp"
                android:text="End Date"
                android:textColor="@color/text_light"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/activity_end_time_update"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:gravity="center|start"
                android:paddingLeft="10dp"
                android:text="End Time"
                android:textColor="@color/text_light"
                android:textSize="24sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/activity_note_update"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="20sp"
            android:background="@drawable/button_bg"
            android:gravity="start"
            android:hint="Note"
            android:paddingLeft="10dp"
            android:paddingTop="10dp" />

        <Button
            android:id="@+id/save_activity_update"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/blue"
            android:text="@string/save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />

    </LinearLayout>

</LinearLayout>