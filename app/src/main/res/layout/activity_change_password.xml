<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rohin.fieldoutadmin.activity.ChangePasswordActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/change_password"
        android:textSize="@dimen/title_text_size"
        android:textColor="@color/button"/>

    <View
        android:layout_width="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_height="0.5dp"
        android:background="@color/light_black"
        android:layout_marginTop="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/old_password"
        android:textSize="@dimen/sub_header_size"
        android:textColor="@color/text_light"/>

    <EditText
        android:id="@+id/edit_text_old_password"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/button_bg"
        android:hint="@string/old_password"
        android:gravity="center|start"
        android:paddingLeft="10dp"
        android:inputType="textPassword"
        android:textColor="@color/text_light"
        android:textSize="@dimen/sub_header_size"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/new_password"
        android:textSize="@dimen/sub_header_size"
        android:textColor="@color/text_light"/>

    <EditText
        android:id="@+id/edit_text_new_password"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/button_bg"
        android:hint="@string/new_password"
        android:gravity="center|start"
        android:paddingLeft="10dp"
        android:inputType="textPassword"
        android:textColor="@color/text_light"
        android:textSize="@dimen/sub_header_size"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/confirm_password"
        android:textSize="@dimen/sub_header_size"
        android:textColor="@color/text_light"/>

    <EditText
        android:id="@+id/edit_text_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/button_bg"
        android:hint="@string/confirm_password"
        android:gravity="center|start"
        android:paddingLeft="10dp"
        android:inputType="textPassword"
        android:textColor="@color/text_light"
        android:textSize="@dimen/sub_header_size"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/button_save_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_background_signup"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:textColor="@color/white"
        android:padding="10dp"
        android:layout_marginBottom="25dp"
        android:text="@string/update_password"
        android:textSize="@dimen/privacy_policy_statement" />

</LinearLayout>
</LinearLayout>
</layout>