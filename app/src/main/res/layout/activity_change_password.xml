<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.kyros.technologies.fieldout.activity.ChangePasswordActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/change_password"
                android:textColor="@color/button"
                android:textSize="@dimen/title_text_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/light_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/old_password"
                android:textColor="@color/text_light"
                android:textSize="@dimen/sub_header_size"
                android:visibility="gone" />

            <EditText
                android:id="@+id/edit_text_old_password"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_red"
                android:gravity="center|start"
                android:hint="@string/old_password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textColor="@color/light_black"
                android:textColorHint="@color/text_light"
                android:textSize="@dimen/privacy_policy_statement" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/new_password"
                android:textColor="@color/text_light"
                android:textSize="@dimen/sub_header_size"
                android:visibility="gone" />

            <EditText
                android:id="@+id/edit_text_new_password"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_red"
                android:gravity="center|start"
                android:hint="@string/new_password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textColor="@color/light_black"
                android:textColorHint="@color/text_light"
                android:textSize="@dimen/privacy_policy_statement" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/confirm_password"
                android:textColor="@color/text_light"
                android:textSize="@dimen/sub_header_size"
                android:visibility="gone" />

            <EditText
                android:id="@+id/edit_text_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_red"
                android:gravity="center|start"
                android:hint="@string/confirm_password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textColor="@color/light_black"
                android:textColorHint="@color/text_light"
                android:textSize="@dimen/privacy_policy_statement" />

            <Button
                android:id="@+id/button_save_password"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/blue"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/update_password"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/sub_header_size" />

        </LinearLayout>

    </LinearLayout>

</layout>