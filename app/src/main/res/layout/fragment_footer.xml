<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/email_background"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/available_fields"
                            android:textColor="@color/button"
                            android:textSize="@dimen/sub_header_size" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/button" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="100">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="50"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="60dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@color/blue"
                                    android:gravity="center"
                                    android:text="@string/job"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sub_header_size" />

                                <TextView
                                    android:id="@+id/text_view_job_hash_fragment"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:drawableLeft="@drawable/right_arrow_24_filled"
                                    android:drawablePadding="12dp"
                                    android:gravity="start|center"
                                    android:text="@string/job_hash"
                                    android:textColor="@color/light_black"
                                    android:textSize="@dimen/sub_header_size" />

                                <TextView
                                    android:id="@+id/text_view_date_scheduled_started_fragment"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:drawableLeft="@drawable/right_arrow_24_filled"
                                    android:drawablePadding="12dp"
                                    android:gravity="start|center"
                                    android:text="@string/date_scheduled"
                                    android:textColor="@color/light_black"
                                    android:textSize="@dimen/sub_header_size" />

                                <TextView
                                    android:id="@+id/text_view_date_carried_out_started"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:drawableLeft="@drawable/right_arrow_24_filled"
                                    android:drawablePadding="12dp"
                                    android:gravity="start|center"
                                    android:text="@string/date_carried_out"
                                    android:textColor="@color/light_black"
                                    android:textSize="@dimen/sub_header_size" />

                                <TextView
                                    android:id="@+id/text_view_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:drawableLeft="@drawable/right_arrow_24_filled"
                                    android:drawablePadding="12dp"
                                    android:gravity="start|center"
                                    android:text="@string/date"
                                    android:textColor="@color/light_black"
                                    android:textSize="@dimen/sub_header_size" />

                                <TextView
                                    android:layout_width="150dp"
                                    android:layout_height="60dp"
                                    android:background="@drawable/background_text_view"
                                    android:gravity="center"
                                    android:text="@string/paging"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sub_header_size" />

                                <TextView
                                    android:id="@+id/text_view_current_page_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:drawableLeft="@drawable/right_arrow_24_filled"
                                    android:drawablePadding="12dp"
                                    android:gravity="start|center"
                                    android:text="@string/current_page_number"
                                    android:textColor="@color/light_black"
                                    android:textSize="@dimen/sub_header_size" />

                                <TextView
                                    android:id="@+id/text_view_total_page_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:drawableLeft="@drawable/right_arrow_24_filled"
                                    android:drawablePadding="12dp"
                                    android:gravity="start|center"
                                    android:text="@string/total_page_number"
                                    android:textColor="@color/light_black"
                                    android:textSize="@dimen/sub_header_size" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="50"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/left_zone"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/sub_header_size" />

                        <EditText
                            android:id="@+id/edit_text_left_zone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/button_bg"
                            android:gravity="start"
                            android:minHeight="80dp"
                            android:padding="8dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/privacy_policy_statement" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/central_zone"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/sub_header_size" />

                        <EditText
                            android:id="@+id/edit_text_central_zone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:background="@drawable/button_bg"
                            android:gravity="start"
                            android:minHeight="80dp"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/privacy_policy_statement" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/right_zone"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/sub_header_size" />

                        <EditText
                            android:id="@+id/edit_text_right_zone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:background="@drawable/button_bg"
                            android:gravity="start"
                            android:minHeight="80dp"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/privacy_policy_statement" />

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/button_footer"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/blue"
                    android:text="@string/save"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sub_header_size" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>