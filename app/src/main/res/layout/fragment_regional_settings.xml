<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginRight="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:layout_marginBottom="5dp"
                        android:text="@string/date_and_time_format"
                        android:textColor="@color/button"
                        android:textSize="@dimen/sub_header_size" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/button" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/short_date_format"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/privacy_policy_statement" />

                            <Spinner
                                android:id="@+id/spinner_short_date_format"
                                style="@style/SpinnerTheme"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="15dp"
                                android:paddingRight="30dp" />

                            <TextView
                                android:id="@+id/text_view_short_date_format"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="15dp"
                                android:text="@string/_2017_12_29"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/privacy_policy_statement" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/short_time_format"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/privacy_policy_statement" />

                            <Spinner
                                android:id="@+id/spinner_short_time_format"
                                style="@style/SpinnerTheme"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="15dp"
                                android:paddingRight="30dp" />

                            <TextView
                                android:id="@+id/text_view_short_time_format"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="15dp"
                                android:text="@string/_11_29"
                                android:textColor="@color/light_black" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/long_date_format"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/privacy_policy_statement" />

                            <Spinner
                                android:id="@+id/spinner_long_date"
                                style="@style/SpinnerTheme"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="15dp"
                                android:paddingRight="30dp" />

                            <TextView
                                android:id="@+id/text_view_long_date_format"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="15dp"
                                android:text="@string/wed_dec"
                                android:textColor="@color/light_black" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/time_zone"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/privacy_policy_statement" />

                            <Spinner
                                android:id="@+id/spinner_time_zone_regional"
                                style="@style/SpinnerTheme"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="15dp"
                                android:paddingRight="30dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:layout_marginBottom="5dp"
                        android:text="@string/decimal_and_currency_format"
                        android:textColor="@color/button"
                        android:textSize="@dimen/sub_header_size" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/button" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/decimal_separator"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/privacy_policy_statement" />

                            <Spinner
                                android:id="@+id/spinner_decimal_separator"
                                style="@style/SpinnerTheme"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="15dp"
                                android:paddingRight="30dp" />

                            <TextView
                                android:id="@+id/text_view_decimal_separator"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="15dp"
                                android:text="@string/_153_60"
                                android:textColor="@color/light_black" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/group_separator"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/privacy_policy_statement" />

                            <Spinner
                                android:id="@+id/spinner_group_separator"
                                style="@style/SpinnerTheme"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="15dp"
                                android:paddingRight="30dp" />

                            <TextView
                                android:id="@+id/text_view_group_separator"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="15dp"
                                android:text="@string/_125_452"
                                android:textColor="@color/light_black" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/currency_symbol"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/privacy_policy_statement" />

                            <Spinner
                                android:id="@+id/spinner_currency"
                                style="@style/SpinnerTheme"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="15dp"
                                android:paddingRight="30dp" />

                            <TextView
                                android:id="@+id/text_view_currency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="15dp"
                                android:text="@string/currency_symbol_ex"
                                android:textColor="@color/light_black" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/distance_unit"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/privacy_policy_statement" />

                            <Spinner
                                android:id="@+id/spinner_distance"
                                style="@style/SpinnerTheme"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="15dp"
                                android:paddingRight="30dp" />

                            <TextView
                                android:id="@+id/text_view_kms"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="15dp"
                                android:text="@string/km"
                                android:textColor="@color/light_black" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:text="@string/address_format"
                android:textColor="@color/button"
                android:textSize="@dimen/sub_header_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginBottom="10dp"
                android:background="@color/button" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/address_format"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/privacy_policy_statement" />

                <Spinner
                    android:id="@+id/spinner_address_format"
                    style="@style/SpinnerTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:paddingRight="25dp" />

                <TextView
                    android:id="@+id/text_view_address_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:text="@string/ex_address_format"
                    android:textColor="@color/light_black" />

            </LinearLayout>

            <Button
                android:id="@+id/save_regional_button"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_background_signup"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/sub_header_size" />

        </LinearLayout>

    </LinearLayout>

</layout>