<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/item_invoice"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/button_red"
                    android:hint="Items         "
                    android:paddingLeft="10dp"
                    android:textColor="@color/light_black"
                    android:textColorHint="@color/text_light"
                    android:textSize="@dimen/privacy_policy_statement" />

                <EditText
                    android:id="@+id/desc_invoice"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_red"
                    android:hint="Description"
                    android:paddingLeft="10dp"
                    android:textColor="@color/light_black"
                    android:textColorHint="@color/text_light"
                    android:textSize="@dimen/privacy_policy_statement" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/unit_price_invoice"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/button_red"
                    android:hint="Unit Price "
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:textColor="@color/light_black"
                    android:textColorHint="@color/text_light"
                    android:textSize="@dimen/privacy_policy_statement" />

                <EditText
                    android:id="@+id/quantity_invoice"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_red"
                    android:hint="Quantity   "
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:textColor="@color/light_black"
                    android:textColorHint="@color/text_light"
                    android:textSize="@dimen/privacy_policy_statement" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/discount_invoice"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/button_red"
                    android:hint="Discount"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:textColor="@color/light_black"
                    android:textColorHint="@color/text_light"
                    android:textSize="@dimen/privacy_policy_statement" />


                <TextView
                    android:id="@+id/total_invoice"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg"
                    android:gravity="center|start"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:text="Total      "
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/privacy_policy_statement" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/tax"
                android:textColor="@color/light_black"
                android:textSize="@dimen/title_text_size" />

            <Spinner
                android:id="@+id/tax_invoice_spinner"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                style="@style/SpinnerThemeRed"/>

            <Button
                android:id="@+id/save_invoice_add"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/blue"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/title_text_size" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>