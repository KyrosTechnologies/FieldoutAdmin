<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:orientation="vertical">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/add_activity_type"
                    android:id="@+id/add_activity_type_button"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/privacy_policy_statement"
                    android:background="@drawable/button_background_signup"/>
                <TableLayout
                    android:layout_width="match_parent"
                    android:id="@+id/activity_type_table_layout"
                    android:divider="@color/light_black"
                    android:showDividers="middle"
                    android:layout_marginBottom="20dp"
                    android:layout_height="match_parent">
                    <TableRow
                        android:layout_width="match_parent"
                        android:background="@color/button"
                        android:layout_gravity="center"
                        android:minHeight="100px"
                        android:id="@+id/row_activity_type"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_gravity="left|center"
                            android:layout_weight="50"
                            android:layout_marginLeft="10dp"
                            android:textSize="@dimen/sub_header_size"
                            android:text="@string/acitivities"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_gravity="left|center"
                            android:layout_weight="50"
                            android:layout_marginLeft="10dp"
                            android:textSize="@dimen/sub_header_size"
                            android:text="@string/color"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="50"
                            android:layout_gravity="left|center"
                            android:textSize="@dimen/sub_header_size"
                            android:text="@string/generate_with_conflict"/>




                    </TableRow>






                </TableLayout>




            </LinearLayout>




        </ScrollView>

    </LinearLayout>
</layout>