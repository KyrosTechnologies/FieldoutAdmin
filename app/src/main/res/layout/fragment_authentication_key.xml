<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:textColor="@color/light_black"
        android:layout_gravity="center"
        android:text="Your authentication key is like a password for your account that can be used by other applications to access your
 Field Out data.  Only share this key with applications or 3rd parties that you trust.  Anyone who has your authentication key can access and update your data."
        android:textSize="@dimen/sub_header_size"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="100"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginBottom="15dp"
        android:textColor="@color/light_black"
        android:layout_weight="50"
        android:layout_gravity="left"
        android:padding="8dp"
        android:id="@+id/textView_token_id"
        android:background="@drawable/default_text_view_background"
        android:textSize="@dimen/sub_header_size"
        android:text="eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c2VyIjoiSm9obiJ9.Pddmgo1WRdzy4dQoXnKUA54ZRknIY5zTRXXiDKmXNM0"
        android:layout_height="wrap_content" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="50"
            android:textColor="@color/white"
            android:text="Generate New Key"
            android:textAlignment="textStart"
            android:drawablePadding="9dp"
            android:drawableStart="@drawable/icon_general_20"
            android:background="@drawable/button_background_signup"
            android:layout_marginRight="50dp"/>
    </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_marginTop="10dp"
    android:background="@color/light_black"/>
</LinearLayout>
</LinearLayout>
</layout>