<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rohin.fieldoutadmin.activity.AddUserActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="100"
            android:id="@+id/linear_l_one"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:id="@+id/linear_l_two"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:text="@string/user_information"
                    android:layout_gravity="center|start"
                    android:layout_marginBottom="10dp"
                    android:textSize="@dimen/title_text_size"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="15dp"
                    android:background="@color/light_black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="100"
                    android:id="@+id/linear_l_four"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="50"
                        android:id="@+id/linear_l_five">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sub_header_size"
                            android:text="@string/last_name"
                            android:layout_gravity="center|start"
                            android:layout_marginBottom="5dp"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/last_name_add_user_etext"
                            android:textColor="@color/black"
                            android:textColorHint="@color/light_black"
                            android:singleLine="true"
                            android:layout_marginBottom="10dp"
                            android:hint="@string/enter_last_name"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sub_header_size"
                            android:text="@string/mobile_number"
                            android:drawableLeft="@drawable/icon_general_20"
                            android:paddingLeft="5dp"
                            android:drawablePadding="5dp"
                            android:layout_gravity="center|start"
                            android:layout_marginBottom="5dp"/>

                        <EditText
                            android:id="@+id/mobile_add_user_etext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:hint="@string/enter_mobile_number"
                            android:inputType="phone"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/light_black" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sub_header_size"
                            android:text="@string/profile"
                            android:layout_gravity="center|start"
                            android:layout_marginBottom="5dp"/>
                        <Spinner
                            android:layout_width="match_parent"
                            android:id="@+id/spinner_profile_add_user"
                            android:prompt="@string/profile"
                            android:layout_marginBottom="10dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sub_header_size"
                            android:text="@string/user_name"
                            android:layout_gravity="center|start"
                            android:layout_marginBottom="5dp"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/user_name_add_user_etext"
                            android:textColor="@color/black"
                            android:textColorHint="@color/light_black"
                            android:singleLine="true"
                            android:layout_marginBottom="10dp"
                            android:hint="@string/enter_user_name"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sub_header_size"
                            android:text="@string/sub_contractor"
                            android:layout_gravity="center|start"
                            android:layout_marginBottom="5dp"/>
                        <Spinner
                            android:layout_width="match_parent"
                            android:id="@+id/spinner_subcontractor_add_user"
                            android:layout_marginBottom="10dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linear_l_six"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="50"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sub_header_size"
                            android:text="@string/first_name"
                            android:layout_gravity="center|start"
                            android:layout_marginBottom="5dp"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/first_name_add_user_etext"
                            android:textColor="@color/black"
                            android:singleLine="true"
                            android:textColorHint="@color/light_black"
                            android:layout_marginBottom="10dp"
                            android:hint="@string/enter_first_name"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sub_header_size"
                            android:text="@string/email"
                            android:layout_gravity="center|start"
                            android:layout_marginBottom="5dp"/>

                        <EditText
                            android:id="@+id/email_add_user_etext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:hint="@string/enter_email_address"
                            android:inputType="textEmailAddress"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/light_black" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sub_header_size"
                            android:text="@string/language"
                            android:layout_gravity="center|start"
                            android:layout_marginBottom="5dp"/>
                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/spinner_language_add_user"
                            android:layout_marginBottom="10dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sub_header_size"
                            android:text="@string/password"
                            android:layout_gravity="center|start"
                            android:layout_marginBottom="5dp"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/password_add_user_etext"
                            android:textColor="@color/black"
                            android:inputType="textPassword"
                            android:singleLine="true"
                            android:textColorHint="@color/light_black"
                            android:layout_marginBottom="10dp"
                            android:hint="@string/enter_password"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sub_header_size"
                            android:text="@string/time_zone"
                            android:layout_gravity="center|start"
                            android:layout_marginBottom="5dp"/>
                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/spinner_time_zone_add_user"
                            android:layout_marginBottom="10dp"/>
                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linear_l_three"
                android:layout_marginLeft="20dp"
                android:layout_weight="70"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:text="@string/start_location"
                    android:layout_gravity="center|start"
                    android:layout_marginBottom="10dp"
                    android:textSize="@dimen/title_text_size"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="15dp"
                    android:background="@color/light_black"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/start_location_add_user_etext"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_black"
                    android:singleLine="true"
                    android:layout_marginBottom="20dp"
                    android:hint="@string/start_location"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:text="@string/skilled_trades"
                    android:layout_gravity="center|start"
                    android:layout_marginBottom="10dp"
                    android:textSize="@dimen/title_text_size"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="15dp"
                    android:background="@color/light_black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/skilled_trades_add_user_etext"
                    android:textColor="@color/black"
                    android:text="@string/skilled_trades"
                    android:drawableEnd="@drawable/down_arrow_black_15"
                    android:layout_marginBottom="20dp"
                    android:textSize="@dimen/sub_text_size"
                    />
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_marginBottom="15dp"
                    android:visibility="gone"
                    android:id="@+id/recycler_skilled_list"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:text="@string/additional_information"
                    android:layout_gravity="center|start"
                    android:layout_marginBottom="10dp"
                    android:textSize="@dimen/title_text_size"/>
                <TableLayout
                    android:id="@+id/table_layout_custom_fields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:divider="@color/light_black"
                    android:showDividers="middle"
                    android:shrinkColumns="*"
                    android:stretchColumns="*"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="15dp"
                    android:background="@color/light_black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:text="@string/teams"
                    android:layout_gravity="center|start"
                    android:layout_marginBottom="10dp"
                    android:textSize="@dimen/title_text_size"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="15dp"
                    android:background="@color/light_black"/>
                <!--<Spinner-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/teams_spinner_add_user"-->
                    <!--android:layout_marginBottom="20dp"-->
                    <!--/>-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/select_teams"
                    android:drawableEnd="@drawable/down_arrow_black_15"
                    android:id="@+id/text_view_select_team"
                    android:layout_marginBottom="20dp"
                    android:textSize="@dimen/sub_text_size"
                    />
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_marginBottom="15dp"
                    android:visibility="gone"
                    android:id="@+id/recycler_teams_list"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/save"
            android:id="@+id/button_save_add_users"
            android:textColor="@color/white"
            android:textSize="@dimen/privacy_policy_statement"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_signup"/>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
</layout>