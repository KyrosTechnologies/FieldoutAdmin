<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_light"
                    android:text="@string/change_default_template"
                    android:id="@+id/add_teams_button"
                    android:layout_marginBottom="10dp"
                    android:textAllCaps="false"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:textSize="@dimen/privacy_policy_statement"
                    android:background="@drawable/button_bg"/>
                <TableLayout
                    android:layout_width="match_parent"
                    android:id="@+id/table_layout_report_template"
                    android:divider="@color/light_black"
                    android:showDividers="middle"
                    android:layout_marginBottom="20dp"
                    android:layout_height="wrap_content">
                    <TableRow
                        android:layout_width="match_parent"
                        android:background="@color/button"
                        android:layout_gravity="center"
                        android:minHeight="100px"
                        android:id="@+id/row_layout_report_template"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_gravity="left|center"
                            android:layout_weight="50"
                            android:layout_marginLeft="10dp"
                            android:textSize="@dimen/sub_header_size"
                            android:text="@string/job_report"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_gravity="left|center"
                            android:layout_weight="50"
                            android:layout_marginLeft="10dp"
                            android:textSize="@dimen/sub_header_size"
                            android:text="@string/published"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="50"
                            android:layout_gravity="left|center"
                            android:textSize="@dimen/sub_header_size"
                            android:text="@string/default_text"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_weight="50"
                            android:layout_gravity="left|center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textSize="@dimen/sub_header_size"
                            android:text="@string/pdf_template"/>


                    </TableRow>






                </TableLayout>

                <LinearLayout
                    android:id="@+id/linear_layout_job_report_template"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no_teams_found"
                        android:textSize="@dimen/site_address_text_size"
                        android:textColor="@color/button"
                        android:layout_gravity="center"/>

                </LinearLayout>


            </LinearLayout>




        </ScrollView>

    </LinearLayout>
</layout>