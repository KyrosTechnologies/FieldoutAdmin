<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.kyros.technologies.fieldout.activity.AddUserActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linear_l_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <LinearLayout
                        android:id="@+id/linear_l_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginBottom="5dp"
                            android:text="@string/user_information"
                            android:textColor="@color/button"
                            android:textSize="@dimen/title_text_size" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/button" />

                        <LinearLayout
                            android:id="@+id/linear_l_four"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="100">

                            <LinearLayout
                                android:id="@+id/linear_l_five"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="50"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|start"
                                    android:layout_marginBottom="5dp"
                                    android:text="@string/last_name"
                                    android:textSize="@dimen/sub_header_size"
                                    android:visibility="gone" />

                                <EditText
                                    android:id="@+id/last_name_add_user_etext"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/button_red"
                                    android:hint="@string/enter_last_name"
                                    android:paddingLeft="10dp"
                                    android:textColor="@color/light_black"
                                    android:textColorHint="@color/text_light"
                                    android:textSize="@dimen/privacy_policy_statement" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|start"
                                    android:layout_marginBottom="5dp"
                                    android:drawableLeft="@drawable/icon_general_20"
                                    android:drawablePadding="5dp"
                                    android:paddingLeft="5dp"
                                    android:text="@string/mobile_number"
                                    android:textSize="@dimen/sub_header_size"
                                    android:visibility="gone" />

                                <EditText
                                    android:id="@+id/mobile_add_user_etext"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/button_red"
                                    android:hint="@string/enter_mobile_number"
                                    android:inputType="phone"
                                    android:paddingLeft="10dp"
                                    android:textColor="@color/light_black"
                                    android:textColorHint="@color/text_light"
                                    android:textSize="@dimen/privacy_policy_statement" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|start"
                                    android:layout_marginBottom="10dp"
                                    android:text="@string/profile"
                                    android:textSize="@dimen/sub_header_size" />

                                <TextView
                                    android:id="@+id/text_view_profile_add_user"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/button_bg"
                                    android:gravity="center|start"
                                    android:paddingLeft="10dp"
                                    android:prompt="@string/profile"
                                    android:text="@string/profile"
                                    android:textColor="@color/light_black"
                                    android:textSize="@dimen/privacy_policy_statement" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|start"
                                    android:layout_marginBottom="5dp"
                                    android:text="@string/user_name"
                                    android:textSize="@dimen/sub_header_size"
                                    android:visibility="gone" />

                                <EditText
                                    android:id="@+id/user_name_add_user_etext"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/button_red"
                                    android:hint="@string/enter_user_name"
                                    android:paddingLeft="10dp"
                                    android:visibility="gone"
                                    android:textColor="@color/light_black"
                                    android:textColorHint="@color/text_light"
                                    android:textSize="@dimen/privacy_policy_statement" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|start"
                                    android:layout_marginBottom="10dp"
                                    android:text="@string/sub_contractor"
                                    android:textColor="@color/light_black"
                                    android:textSize="@dimen/sub_header_size" />

                                <TextView
                                    android:id="@+id/text_view_subcontractor_add_user"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/button_bg"
                                    android:gravity="center|start"
                                    android:paddingLeft="10dp"
                                    android:prompt="@string/sub_contractor"
                                    android:text="@string/profile"
                                    android:textColor="@color/light_black"
                                    android:textSize="@dimen/privacy_policy_statement" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linear_l_six"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="50"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|start"
                                    android:layout_marginBottom="5dp"
                                    android:text="@string/first_name"
                                    android:textSize="@dimen/sub_header_size"
                                    android:visibility="gone" />

                                <EditText
                                    android:id="@+id/first_name_add_user_etext"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/button_red"
                                    android:hint="@string/enter_first_name"
                                    android:paddingLeft="10dp"
                                    android:textColor="@color/light_black"
                                    android:textColorHint="@color/text_light"
                                    android:textSize="@dimen/privacy_policy_statement" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|start"
                                    android:layout_marginBottom="5dp"
                                    android:text="@string/email"
                                    android:textSize="@dimen/sub_header_size"
                                    android:visibility="gone" />

                                <EditText
                                    android:id="@+id/email_add_user_etext"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/button_red"
                                    android:hint="@string/enter_email_address"
                                    android:inputType="textEmailAddress"
                                    android:paddingLeft="10dp"
                                    android:textColor="@color/light_black"
                                    android:textColorHint="@color/text_light"
                                    android:textSize="@dimen/privacy_policy_statement" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|start"
                                    android:layout_marginBottom="10dp"
                                    android:text="@string/language"
                                    android:textColor="@color/light_black"
                                    android:textSize="@dimen/sub_header_size" />

                                <TextView
                                    android:id="@+id/text_view_language_add_user"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/button_bg"
                                    android:gravity="center|start"
                                    android:paddingLeft="10dp"
                                    android:prompt="@string/profile"
                                    android:text="@string/language"
                                    android:textColor="@color/light_black"
                                    android:textSize="@dimen/privacy_policy_statement" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|start"
                                    android:layout_marginBottom="5dp"
                                    android:text="@string/password"
                                    android:textSize="@dimen/sub_header_size"
                                    android:visibility="gone" />

                                <EditText
                                    android:id="@+id/password_add_user_etext"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/button_red"
                                    android:hint="@string/enter_password"
                                    android:inputType="textPassword"
                                    android:paddingLeft="10dp"
                                    android:visibility="gone"
                                    android:textColor="@color/light_black"
                                    android:textColorHint="@color/text_light"
                                    android:textSize="@dimen/privacy_policy_statement" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|start"
                                    android:layout_marginBottom="10dp"
                                    android:text="@string/time_zone"
                                    android:textColor="@color/light_black"
                                    android:textSize="@dimen/sub_header_size" />

                                <TextView
                                    android:id="@+id/text_view_time_zone_add_user"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/button_bg"
                                    android:gravity="center|start"
                                    android:paddingLeft="10dp"
                                    android:prompt="@string/profile"
                                    android:text="@string/time_zone"
                                    android:textColor="@color/light_black"
                                    android:textSize="@dimen/privacy_policy_statement" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_l_three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="70"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginBottom="5dp"
                            android:text="@string/start_location"
                            android:textColor="@color/button"
                            android:textSize="@dimen/title_text_size" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/button" />

                        <EditText
                            android:id="@+id/start_location_add_user_etext"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/button_bg"
                            android:hint="@string/start_location"
                            android:paddingLeft="10dp"
                            android:textColor="@color/light_black"
                            android:textColorHint="@color/text_light"
                            android:textSize="@dimen/privacy_policy_statement" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginBottom="5dp"
                            android:text="@string/skilled_trades"
                            android:textColor="@color/button"
                            android:textSize="@dimen/title_text_size" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/button" />

                        <TextView
                            android:id="@+id/skilled_trades_add_user_etext"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/button_bg"
                            android:drawableEnd="@drawable/down_arrow_black_15"
                            android:gravity="center|start"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="@string/skilled_trades"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/privacy_policy_statement" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_skilled_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginBottom="5dp"
                            android:text="@string/additional_information"
                            android:textColor="@color/button"
                            android:textSize="@dimen/title_text_size" />

                        <TableLayout
                            android:id="@+id/table_layout_custom_fields"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:divider="@color/light_black"
                            android:showDividers="middle"
                            android:shrinkColumns="*"
                            android:stretchColumns="*" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/button" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginBottom="5dp"
                            android:text="@string/teams"
                            android:textColor="@color/button"
                            android:textSize="@dimen/title_text_size" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/button" />

                        <TextView
                            android:id="@+id/teams_spinner_add_user"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/button_bg"
                            android:drawableEnd="@drawable/down_arrow_black_15"
                            android:gravity="start|center"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="@string/select_teams"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/privacy_policy_statement" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_team_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/button_save_add_users"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/blue"
                    android:text="@string/save"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/privacy_policy_statement" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>