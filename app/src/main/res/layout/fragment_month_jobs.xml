<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/add_jobs_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/button_bg"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Job"
            android:textColor="@color/text_light"
            android:textSize="@dimen/privacy_policy_statement"
            android:padding="10dp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/button"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/light_black"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Job"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size"
            android:layout_gravity="center"
            android:gravity="center"/>

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size"
            android:gravity="center"
            android:layout_gravity="center"/>

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <TextView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:text="Customer / Site / Equipment"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size"
            android:gravity="center"
            android:layout_gravity="center"/>

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <TextView
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:text="Technician"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size"
            android:gravity="center"
            android:layout_gravity="center"/>

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <TextView
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:text="From"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size"
            android:gravity="center"
            android:layout_gravity="center"/>

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <TextView
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:text="To"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size"
            android:gravity="center"
            android:layout_gravity="center"/>

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/jobs_month_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:id="@+id/no_monthjobs_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Jobs Found"
            android:textSize="@dimen/site_address_text_size"
            android:textColor="@color/button"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>