<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edit_text_input"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_bg"
            android:hint="@string/input_goes_here"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:visibility="gone"
            android:textColor="@color/light_black"
            android:textColorHint="@color/text_light"
            android:textSize="@dimen/privacy_policy_statement" />
        <Spinner
            android:id="@+id/spinner_list_of_values"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            style="@style/SpinnerTheme"/>

        <TextView
            android:id="@+id/text_view_date_update"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="5dp"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_bg"
            android:gravity="center|start"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="8dp"
            android:text="@string/date"
            android:textColor="@color/light_black"
            android:textSize="@dimen/privacy_policy_statement" />
        <EditText
            android:id="@+id/edit_text_input_number"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_bg"
            android:hint="@string/input_goes_here"
            android:paddingLeft="8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:singleLine="true"
            android:visibility="gone"
            android:inputType="numberDecimal"
            android:textColor="@color/light_black"
            android:textColorHint="@color/text_light"
            android:textSize="@dimen/privacy_policy_statement" />
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:id="@+id/check_box_custom_update"
            android:textColor="@color/light_black"
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColorHint="@color/text_light"
            android:paddingLeft="8dp"
            android:textSize="@dimen/privacy_policy_statement"
            android:text="@string/select_here"
            />

        <AutoCompleteTextView
            android:id="@+id/auto_complete_text_custom"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_bg"
            android:hint="@string/customer"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="8dp"
            android:visibility="gone"
            android:textColor="@color/light_black"
            android:textColorHint="@color/text_light"
            android:textSize="@dimen/privacy_policy_statement" />

        <Button
            android:id="@+id/button_save_update"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/blue"
            android:text="@string/save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />
    </LinearLayout>

</LinearLayout>