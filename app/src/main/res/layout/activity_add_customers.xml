<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Customer"
                        android:textSize="24sp"
                        android:textColor="@color/button"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:background="@color/button"
                        android:layout_marginTop="5dp"/>

                    <EditText
                        android:id="@+id/customer_add_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/button_red"
                        android:layout_marginTop="10dp"
                        android:hint="Customer"
                        android:textColor="@color/light_black"
                        android:textColorHint="@color/text_light"
                        android:textSize="20sp"
                        android:paddingLeft="8dp"/>

                    <AutoCompleteTextView
                        android:id="@+id/address_auto_complete_customer"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/button_red"
                        android:layout_marginTop="10dp"
                        android:hint="Address"
                        android:textColor="@color/light_black"
                        android:textColorHint="@color/text_light"
                        android:textSize="20sp"
                        android:singleLine="true"
                        android:paddingLeft="8dp"/>

                    <EditText
                        android:id="@+id/additional_address_customer"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/button_bg"
                        android:layout_marginTop="10dp"
                        android:hint="Additional Address"
                        android:singleLine="true"
                        android:textColor="@color/light_black"
                        android:textColorHint="@color/text_light"
                        android:textSize="20sp"
                        android:paddingLeft="8dp"/>

                    <EditText
                        android:id="@+id/job_number_customer"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/button_red"
                        android:hint="Custom Job #"
                        android:paddingLeft="8dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/light_black"
                        android:textColorHint="@color/text_light"
                        android:textSize="20sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact"
                        android:textSize="24sp"
                        android:textColor="@color/button"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:background="@color/button"
                        android:layout_marginTop="5dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <EditText
                            android:id="@+id/customer_first_name"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:hint="First Name"
                            android:textSize="20sp"
                            android:textColor="@color/light_black"
                            android:textColorHint="@color/text_light"                    android:paddingLeft="8dp"
                            android:background="@drawable/button_bg"
                            android:layout_weight="2"/>

                        <EditText
                            android:id="@+id/customer_last_name"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:hint="Last Name"
                            android:textSize="20sp"
                            android:layout_marginLeft="8dp"
                            android:textColor="@color/light_black"
                            android:textColorHint="@color/text_light"                    android:paddingLeft="8dp"
                            android:background="@drawable/button_bg"
                            android:layout_weight="2"/>

                    </LinearLayout>

                    <EditText
                        android:id="@+id/phone_customer"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/button_bg"
                        android:layout_marginTop="10dp"
                        android:hint="Phone"
                        android:singleLine="true"
                        android:textColor="@color/light_black"
                        android:textColorHint="@color/text_light"
                        android:textSize="20sp"
                        android:paddingLeft="8dp"/>

                    <EditText
                        android:id="@+id/mobile_customer"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/button_bg"
                        android:hint="Mobile"
                        android:paddingLeft="8dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/light_black"
                        android:textColorHint="@color/text_light"
                        android:textSize="20sp"/>

                    <EditText
                        android:id="@+id/fax_customer"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/button_bg"
                        android:layout_marginTop="10dp"
                        android:hint="Fax"
                        android:singleLine="true"
                        android:textColor="@color/light_black"
                        android:textColorHint="@color/text_light"
                        android:textSize="20sp"
                        android:paddingLeft="8dp"/>

                    <EditText
                        android:id="@+id/email_customer"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/button_bg"
                        android:hint="Email"
                        android:paddingLeft="8dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/light_black"
                        android:textColorHint="@color/text_light"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/time_zone"
                        android:textSize="22sp"
                        android:textColor="@color/text_light"
                        android:layout_marginTop="8dp"/>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:id="@+id/spinner_time_zone_customer"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_bg"/>

                    <TextView
                        android:id="@+id/tags_add_customer_text"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/button_bg"
                        android:text="Tags"
                        android:gravity="center|start"
                        android:paddingLeft="8dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/light_black"
                        android:layout_marginBottom="5dp"
                        android:textSize="20sp"/>

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:visibility="gone"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/tags_selected_customer"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/save_customer"
                android:layout_width="200dp"
                android:layout_height="65dp"
                android:text="Save"
                android:textColor="@color/white"
                android:background="@color/blue"
                android:textSize="24sp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>