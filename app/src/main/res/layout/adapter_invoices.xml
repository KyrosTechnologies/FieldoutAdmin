<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/invoices_linear"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="@color/bg"
        android:orientation="horizontal">

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/light_black" />

        <TextView
            android:id="@+id/invoice_date"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="Job"
            android:textColor="@color/text_light"
            android:textSize="@dimen/title_text_size" />

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/light_black" />

        <TextView
            android:id="@+id/invoices_status"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="Status"
            android:textColor="@color/text_light"
            android:textSize="@dimen/title_text_size" />

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/light_black" />

        <TextView
            android:id="@+id/invoices_customer_name"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:singleLine="false"
            android:text="Customer"
            android:textColor="@color/text_light"
            android:textSize="@dimen/title_text_size" />

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/light_black" />

        <TextView
            android:id="@+id/invoices_amount"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:singleLine="false"
            android:text="Technician"
            android:textColor="@color/text_light"
            android:textSize="@dimen/title_text_size" />

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/light_black" />

        <TextView
            android:id="@+id/invoices_tax"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="From"
            android:textColor="@color/text_light"
            android:textSize="@dimen/title_text_size" />

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/light_black" />

        <TextView
            android:id="@+id/invoices_total"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="To"
            android:textColor="@color/text_light"
            android:textSize="@dimen/title_text_size" />

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/light_black" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/light_black" />

</LinearLayout>